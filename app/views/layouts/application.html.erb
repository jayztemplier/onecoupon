<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
      <%= content_tag :h1, yield(:title) if show_title? %>

      <% if company_signed_in? %>
        Logged in as <strong><%= current_company.email %></strong>.
        <%= link_to 'Edit profile', edit_company_registration_path %> |
        <%= link_to("Logout", destroy_company_session_path, method: :delete) %>
      <% else %>
        <%= link_to "Sign up", new_company_registration_path %> |
        <%= link_to "Login", new_company_session_path %>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
